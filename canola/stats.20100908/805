<script type="text/javascript">
$(function() {
	var xmenu_active = null;
	
	
	$('.menu-link').hover(
	function() {
		var xwin_width = $(window).width();
		if(xmenu_active != $(this).attr('id')) {
			if(!$('#'+xmenu_active+'-c')) {
				return;
				
			}
			
			if(xmenu_active) {
				$('#'+xmenu_active+'-c').hide();
			}
			
			xmenu_active = $(this).attr('id');
			
			var xparent = $('#'+ $(this).attr('id') + '-c');
			
			if(xparent.length) {
				xparent.show();
			}
			else {
				return;
			}
			
			var xchild = $('#'+ $(this).attr('id') + '-c-i');
			
			if(!xchild.length) {
				return;
			}
			
			var in_width = xchild.width();
			
			//cal position to display
			var new_x = $(this).position().left;
			
			
			//console.log(new_x + ':'+  in_width + ':' + xwin_width);
			
			if(new_x + in_width > xwin_width - 20) {
				new_x = xwin_width - in_width - 20;	
				
				if(new_x < 0) {
					new_x = 10;
				}
			}
			
			xchild.css('position','relative');		
			xchild.css('left',  new_x + 'px');
			
		}
	},
	function() {}
	);
	

  
});
</script>
		
