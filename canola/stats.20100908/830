function doClear(what){
  if(!cleared) {
    what.value = '';
	cleared = true;
  }
}

function checkSearch(pressed){
  var i, el, s;
  var frm = document.forms['searchFrm'];
  if(pressed=='ws') {
    if(frm.elements['ws'].checked) {
      for (i=0; i<frm.elements.length; i++) {
        el = frm.elements[i];
        s = " "+el.id.toString();
        if(s.search('ar')>0) {        
//          alert(el.id);
          el.checked = true;
        }
      }
    }
  } else {
    el = frm.elements[pressed];
    if(!el.checked) frm.elements['ws'].checked = false;
  }
}
